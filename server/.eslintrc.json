{
  "env": {
    "node": true,
    "es2021": true,
    "commonjs": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "prettier/prettier": ["error", { "singleQuote": false }],
    "quotes": ["error", "double", { "avoidEscape": true, "allowTemplateLiterals": true }]
  }
}
